<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/iv_left_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/left_arrow"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="0dp"/>

        <SeekBar
            android:id="@+id/sb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/piano_bar"
            android:progressDrawable="@null"
            android:thumb="@drawable/seekbar_thumb"
            android:padding="0dp" />

        <Button
            android:id="@+id/iv_right_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/right_arrow"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"/>

        <Button
            android:id="@+id/iv_music"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/music" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            tools:context=".MainActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                tools:context=".MainActivity">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- First set of white keys -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/c4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:layout_weight="0.5"
                                android:background="@android:color/white"/>

                            <Button
                                android:id="@+id/d4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:layout_weight="0.5"
                                android:background="@android:color/white"/>

                            <Button
                                android:id="@+id/e4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:layout_weight="0.5"
                                android:background="@android:color/white"/>

                            <Button
                                android:id="@+id/f4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:layout_weight="0.5"
                                android:background="@android:color/white"/>
                        </LinearLayout>

                        <!-- Second set of white keys -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/g4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:layout_weight="0.5"
                                android:background="@android:color/white"/>

                            <Button
                                android:id="@+id/a4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:layout_weight="0.5"
                                android:background="@android:color/white"/>

                            <Button
                                android:id="@+id/b4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:layout_weight="0.5"
                                android:background="@android:color/white"/>
                            <Button
                                android:id="@+id/c5"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:layout_weight="0.5"
                                android:background="@android:color/white" />

                            <Button
                                android:id="@+id/c6"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:layout_weight="0.5"
                                android:background="@android:color/white" />
                            <Button
                                android:id="@+id/c7"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:layout_weight="0.5"
                                android:background="@android:color/white" />



                        </LinearLayout>
                    </LinearLayout>

                    <!-- Black keys -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="132dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <!-- First set of black keys -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="22dp"
                            android:layout_marginEnd="200dp"
                            android:layout_weight="0.5">

                            <Button
                                android:id="@+id/c4_b"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="45dp"
                                android:layout_weight="0.5"
                                android:background="@color/black" />

                            <Button
                                android:id="@+id/eb4_b"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="47dp"
                                android:layout_weight="0.5"
                                android:background="@color/black" />
                        </LinearLayout>

                        <!-- Second set of black keys -->
                        <LinearLayout
                            android:layout_width="410dp"
                            android:layout_height="match_parent"

                            android:layout_marginStart="-85dp"
                            android:layout_marginEnd="26dp"
                            android:layout_weight="0.9">

                            <Button
                                android:id="@+id/f4_b"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="15dp"
                                android:layout_weight="0.5"
                                android:background="@color/black"
                                tools:ignore="NestedWeights" />

                            <Button
                                android:id="@+id/g4_b"


                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="40dp"
                                android:layout_weight="0.5"
                                android:background="@color/black" />

                            <Button
                                android:id="@+id/bb4_b"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="40dp"
                                android:layout_weight="0.5"
                                android:background="@color/black" />
                        </LinearLayout>

                        <!-- Third set of black keys -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="56dp"
                            android:layout_weight="0.5">

                            <Button
                                android:id="@+id/c5_b"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="80dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="0.4"
                                android:background="@color/black"
                                tools:ignore="NestedWeights,TouchTargetSizeCheck" />

                            <Button
                                android:id="@+id/c5_c"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="45dp"
                                android:layout_weight="0.4"
                                android:background="@color/black"
                                tools:ignore="TouchTargetSizeCheck" />

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
